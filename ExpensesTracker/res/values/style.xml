<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="expenses.tracker" parent="@android:style/Theme">
      	<item name="android:windowTitleStyle">@style/expenses.tracker.windowTitle</item>
      	<item name="android:textViewStyle">@style/expenses.tracker.textView</item>
      	<item name="android:windowTitleBackgroundStyle">@style/expenses.tracker.windowTitleBackground</item>
      	<item name="android:buttonStyle">@style/expenses.tracker.button</item>
	</style>

	<style name="expenses.tracker.textView" parent="@android:style/Widget.TextView">
   		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>
	
	<style name="expenses.tracker.windowTitle" parent="@android:style/WindowTitle">
		<item name="android:padding">1dip</item>
	</style>
	
	<style name="expenses.tracker.windowTitleBackground" parent="@android:style/WindowTitleBackground">
		<item name="android:background">#FF6699FF</item>
	</style>

	<style name="expenses.tracker.button" parent="@android:style/Widget.Button">
   		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>		
	</style>
	
	<style name="expenses.tracker.black_button" parent="@android:style/Widget.Button">
   		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">#FF000000</item>
        <item name="android:textColor">#FF6699FF</item>
	</style>
	
  	<style name="expenses.tracker.blueText">
        <item name="android:textColor">#FF6699FF</item>
    </style>
    
  	<style name="expenses.tracker.greyText">
        <item name="android:textColor">#FF909090</item>
    </style>

  	<style name="expenses.tracker.greyBackground">
        <item name="android:background">#FF909090</item>
    </style>
        
</resources>